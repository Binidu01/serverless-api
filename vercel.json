{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(?<path>.*)",
      "dest": "/api/$path.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
